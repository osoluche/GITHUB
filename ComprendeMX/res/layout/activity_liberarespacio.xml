<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="615pt"
    android:layout_height="365pt"
    android:background="#323232"
    android:padding="5dp"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >

    <!-- width 615pt height 365pt -->

    <TableLayout
        android:layout_width="145pt"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5pt"
        android:background="#FFFFFF" >

        <TableRow
            android:layout_width="fill_parent"
            android:background="#323232" >

            <ImageView
                android:id="@+id/header_section"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/desc"
                android:src="@drawable/ic_header" />
        </TableRow>

        <TableRow android:layout_width="fill_parent" >

            <TableLayout
                android:id="@+id/menulayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2pt">
            </TableLayout>
            
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="461pt"
        android:layout_height="365pt"
        android:layout_alignParentRight="true"
        android:background="#323232"
        android:gravity="right" >

        <TableRow
            android:background="@drawable/ic_bottomlinehard"
            android:paddingBottom="7.4490pt"
            android:paddingTop="7.4490pt" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="#323232"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/sectionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5pt"
                    android:text="@string/liberarespacio"
                    android:textColor="#FFFFFF"
                    android:textSize="26sp" />

                <ImageView
                    android:id="@+id/imagen_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/ic_plan_title" />
            </LinearLayout>
        </TableRow>

        <TableRow>

            <TableLayout
                android:id="@+id/cargadorplanes"
                android:layout_width="461pt"
                android:layout_height="wrap_content"
                android:shrinkColumns="0"
                android:stretchColumns="1" />
        </TableRow>
    </TableLayout>

</RelativeLayout>